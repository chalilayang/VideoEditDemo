<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.chalilayang.mediaextractordemo">

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <!-- 声明需要录音权限 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <!-- 声明需要拍照权限 -->
    <uses-permission android:name="android.permission.CAMERA"/>

    <uses-feature android:name="android.hardware.camera"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@style/FullscreenTheme">
        </activity>
        <activity android:name=".CaptureActivity"
                  android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".VideoEditActivity"
            android:label="@string/title_activity_video_edit"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>

                <data
                    android:host="*"
                    android:mimeType="video/mp4"
                    android:pathPattern=".*\\.mp4"
                    android:scheme="file"/>
            </intent-filter>
        </activity>
        <activity android:name=".DecodeActivity">
        </activity>

        <service
            android:name=".services.CodecService"
            android:enabled="true"
            android:exported="false"
            android:process=":remote">
        </service>
        <service
            android:name=".services.BinderPoolService"
            android:enabled="true"
            android:exported="false"
            android:process=":remote">
        </service>

        <activity android:name=".MediaCodecPlayer"
                  android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".MediaCodecPlayActivity"
            android:label="@string/title_activity_media_codec_play"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>